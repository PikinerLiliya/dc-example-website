{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/ugc.json",
  "title": "UGC",
  "description": "A reusable content type UGC content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "stream": {
      "type": "string",
      "title": "Stream",
      "description": "The name of the UGC Stream to load",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "type": {
      "type": "string",
      "title": "Display tupe",
      "description": "The display type for this UGC component",
      "enum": [
        "media-wall",
        "carousel"
      ]
    }
  },
  "propertyOrder": [
    "stream",
    "type"
  ]
}