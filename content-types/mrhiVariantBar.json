{
    "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
    "id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/mrhiVariantBar.json",
    "title": "Mobile Ready Hero Image (MRHI) - Variant Bar",
    "description": "A data model for Mobile ready Hero images using the variant bar",
    "allOf": [
    {
        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }],
    "type": "object",
    "properties":
    {
        "image":
        {
            "type": "object",
            "title": "Product Image",
            "description": "The Product Image",
            "anyOf": [
            {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
            }]
        },
        "imageName": {
          "allOf":[  
                {  
                   "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
                }
             ],
             "properties":{  
                "values":{  
                   "items":{  
                      "properties":{  
                         "value":{  
                            "title": "Image Name",
                            "description": "SEO Friendly image name for export",
                            "type": "string",
                            "validation": "Please enter less than 255 characters",
                            "minLength": 0,
                            "maxLength": 255
                         }
                      }
                   }
                }
             }
        },
        "barsperc":
        {
            "type": "number",
            "title": "Bar Percentage",
            "description": "Location of the variant bars as a percentage down the image",
            "validation": "Please enter a value between 0 & 100",
            "minimum": 0,
            "maximum": 100
        },
        "mainBar": {
          "type": "object",
          "title": "Main Bar",
          "description": "Main Variant Bar (Flavour, Product Attribute, Category Attribute)",
          "allOf": [
            {
              "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/mrhiVariantBarItem.json"
            }
          ]
        },
        "secondaryBar": {
          "type": "object",
          "title": "Secondary Bar",
          "description": "Secondary Variant Bar (Category Attribute, Product Attribute)",
          "allOf": [
            {
              "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/mrhiVariantBarItem.json"
            }
          ]
        },
        "tertiaryBar": {
          "type": "object",
          "title": "Tertiary Bar",
          "description": "Tertiary Variant Bar - Use sparingly (Product Attribute, Flavour)",
          "allOf": [
            {
              "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/mrhiVariantBarItem.json"
            }
          ]
        },
        "size": {
          "allOf":[  
                {  
                   "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
                }
             ],
             "properties":{  
                "values":{  
                   "items":{  
                      "properties":{  
                         "value":{  
                            "type": "string",
                            "title": "Size",
                            "description": "Size of this product",
                            "validation": "Please enter less than 10 characters",
                            "minLength": 0,
                            "maxLength": 10
                         }
                      }
                   }
                }
             }
        },
        "sizeSecondary": {
          "allOf":[  
                {  
                   "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
                }
             ],
             "properties":{  
                "values":{  
                   "items":{  
                      "properties":{  
                         "value":{  
                            "type": "string",
                            "title": "Secondary Size",
                            "description": "Seondary size attribuute if required (This will split the size into 2 lines)",
                            "validation": "Please enter less than 10 characters",
                            "minLength": 0,
                            "maxLength": 10
                         }
                      }
                   }
                }
             }
        },
        "hideSize": {
            "title": "Hide Size?",
            "description": "select to hide the size, default is false",
            "type": "boolean"
          }
    },
    "propertyOrder": [
        "image",
        "imageName",
        "barsperc",
        "mainBar",
        "secondaryBar",
        "tertiaryBar",
        "size",
        "sizeSecondary",
        "hideSize"
    ]
}