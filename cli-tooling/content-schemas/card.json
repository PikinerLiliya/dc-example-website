{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/card.json",
	"title": "Card",
	"description": "A single card of content",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"image": {
			"type": "object",
			"title": "Image",
			"description": "Image used in the card",
			"allOf": [
				{
					"$ref": "https://www.amplience.com/examples/image.json"
				}
			]
		},
		"cardName": {
			"type": "string",
			"title": "Name",
			"description": "Name of the card",
			"validation": "Please enter less than 50 characters",
			"minLength": 0,
			"maxLength": 150
		},
		"description": {
			"type": "string",
			"title": "Description",
			"description": "Card description",
			"validation": "Please enter less than 50 characters",
			"minLength": 0,
			"maxLength": 200
		},
		"links": {
			"type": "array",
			"title": "Links",
			"description": "Links for the card",
			"items": {
				"$ref": "https://www.amplience.com/examples/link.json"
			},
			"minItems": 0,
			"maxItems": 4
		},
		"style": {
			"type": "string",
			"title": "Style",
			"description": "Add classname for CSS styling",
			"validation": "Please enter between 0 and 100 characters",
			"minLength": 0,
			"maxLength": 100
		}
	}
}