{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/landmark-link.json",
	"title": "Landmark Link",
	"description": "Link for landmark content (loacalised)",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"label":
        {
            "allOf": [
            {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            }],
            "properties":
            {
                "values":
                {
                    "items":
                    {
                        "properties":
                        {
                            "value":
                            {
                                "type": "string",
                                "title": "Label",
                                "description": "The label for the link",
                                "validation": "Please enter less than 255 characters",
                                "minLength": 0,
                                "maxLength": 255
                            }
                        }
                    }
                }
            }
        },
        "value":
        {
            "allOf": [
            {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            }],
            "properties":
            {
                "values":
                {
                    "items":
                    {
                        "properties":
                        {
                            "value":
                            {
                                "type": "string",
                                "title": "Value",
                                "description": "The value of the link",
                                "validation": "Please enter less than 255 characters",
                                "minLength": 0,
                                "maxLength": 255
                            }
                        }
                    }
                }
            }
        }
	},
	"propertyOrder": [
		"label",
		"value"
	]
}