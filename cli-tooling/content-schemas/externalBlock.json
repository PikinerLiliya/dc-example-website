{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/externalBlock.json",
	"title": "External Block",
	"description": "A content type which can be used to enter any content (HTML, iFrame etc)",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"external": {
			"type": "string",
			"title": "External",
			"description": "Insert external code (HTML)",
			"validation": "Please enter less than 2000 characters",
			"minLength": 0,
			"maxLength": 2000
		}
	}
}