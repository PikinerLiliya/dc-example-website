{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/landmark-product-category-carousel.json",
	"title": "Product Category Carousel (Landmark)",
	"description": "A list of products",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"header":
        {
            "allOf": [
            {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            }],
            "properties":
            {
                "values":
                {
                    "items":
                    {
                        "properties":
                        {
                            "value":
                            {
                                "type": "string",
                                "title": "Product Category Header",
                                "description": "The Header for this product category",
                                "validation": "Please enter less than 255 characters",
                                "minLength": 0,
                                "maxLength": 255
                            }
                        }
                    }
                }
            }
        },
		"products": {
			"type": "array",
			"title": "Products",
			"description": "Please select the products to display in this list",
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "",
								"enum": [
									"https://www.amplience.com/examples/landmark-product.json"
								]
							}
						}
					}
				]
			},
			"minItems": 1,
			"maxItems": 20
		},
		"heroList": {
			"type": "boolean",
			"title": "Hero format",
			"description": "Hero format supports exactly 3 cards"
		},
		"slider": {
			"type": "boolean",
			"title": "Slider",
			"description": "Does the card list display as a slider? If so it will show a maximum of 3 at one time and no hero list"
		}
	},
	"propertyOrder": [
		"header",
		"products",
		"heroList",
		"slider"
	]
}