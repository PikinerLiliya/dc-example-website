{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/cardList.json",
	"title": "Card List",
	"description": "A list of cards",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"header": {
			"type": "string",
			"title": "Header",
			"description": "Header/Title for the card list",
			"validation": "Please enter less than 50 characters",
			"minLength": 0,
			"maxLength": 100
		},
		"cards": {
			"type": "array",
			"title": "Cards",
			"description": "Please select the cards to display in this list",
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "",
								"enum": [
									"https://www.amplience.com/examples/card.json"
								]
							}
						}
					}
				]
			},
			"minItems": 1,
			"maxItems": 6
		},
		"heroList": {
			"type": "boolean",
			"title": "Hero format",
			"description": "Hero format supports exactly 3 cards"
		},
		"slider": {
			"type": "boolean",
			"title": "Slider",
			"description": "Does the card list display as a slider? If so it will show a maximum of 3 at one time and no hero list"
		}
	},
	"propertyOrder": [
		"header",
		"cards",
		"heroList",
		"slider"
	]
}