{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/image.json",

	"title": "Image",
	"description": "Image with SEO information and allow roundels",
	"allOf": [
		{
		"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"image": {
			"type": "object",
			"title": "Image",
			"description": "Image",
			"anyOf": [
				{
				"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
				}
			]
		},
		"chroma": {
			"title": "Chroma?",
			"description": "Select to turn off chrome sub sampling for better quality contrasts",
			"type": "boolean"
		},
		"mobimg": {
			"type": "object",
			"title": "Mobile Image (optional)",
			"description": "Optional mobile version of image",
			"anyOf": [
				{
				"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
				}
			]
		},
		"imageAltText": {
			"type": "string",
			"title": "Image alt text",
			"description": "Alternative text for image for SEO",
			"minLength": 0,
			"maxLength": 100
		},
		"seoText": {
			"type": "string",
			"title": "SEO Text",
			"description": "e.g. ladies-sunglasses",
			"minLength": 0,
			"maxLength": 100
		},
		"roundel": {
			"type": "array",
			"title": "Roundel",
			"description": "Roundel image",
			"items": {
				"$ref": "https://www.amplience.com/examples/roundel.json"
			},
			"minItems": 0,
			"maxItems": 1,
			"_interpolate": true
		},
		"display": {
			"type": "string",
			"title": "Display type",
			"description": "How the image should display (Point of Interest, Hotspots, served staticaly (ie, animated GIF)",
			"enum": [
				"Point of Interest",
				"Image Recognition Focal Point Face",
				"Hotspots",
				"Static"
			]
		}
	},
	"propertyOrder": [
		"image",
		"chroma",
		"imageAltText",
		"seoText",
		"roundel",
		"display"
	]
}