{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/link.json",
	"title": "Link",
	"description": "URL action link ",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"label": {
			"type": "string",
			"title": "Label",
			"description": "The label to be used on display of a link",
			"minLength": 0,
			"maxLength": 255
		},
		"type": {
			"type": "string",
			"title": "Link Type",
			"description": "The type of link. Default is URL",
			"enum": [
				"URL",
				"Category ID",
				"Product SKU",
				"Page ID"
			]
		},
		"value": {
			"type": "string",
			"title": "Value",
			"description": "A relative URL, absolute URL or an ID",
			"minLength": 0,
			"maxLength": 2000
		}
	},
	"propertyOrder": [
		"label",
		"type",
		"value"
	]
}