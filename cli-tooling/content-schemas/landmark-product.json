{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://www.amplience.com/examples/landmark-product.json",
    "title": "Landmark Product",
    "description": "A single product display",
    "allOf": [
    {
        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }],
    "type": "object",
    "properties":
    {
        "image":
        {
            "type": "object",
            "title": "Image",
            "description": "Image",
            "anyOf": [
            {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
            }]
        },
        "header":
        {
            "allOf": [
            {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            }],
            "properties":
            {
                "values":
                {
                    "items":
                    {
                        "properties":
                        {
                            "value":
                            {
                                "type": "string",
                                "title": "Product Header",
                                "description": "The Header for this Product",
                                "validation": "Please enter less than 255 characters",
                                "minLength": 0,
                                "maxLength": 255
                            }
                        }
                    }
                }
            }
        },
        "link":
        {
            "type": "object",
            "title": "Link",
            "description": "The action link for this product",
            "allOf": [
            {
                "$ref": "https://www.amplience.com/examples/landmark-link.json"
            }]
        },
        "analytics":
        {
            "type": "string",
            "title": "Analytics Name",
            "description": "The name for this content to be used in Google Analytics",
            "validation": "Please enter less than 255 characters",
            "minLength": 0,
            "maxLength": 255
        },
        "style":
        {
            "type": "string",
            "title": "Style",
            "description": "Add classname for CSS styling",
            "validation": "Please enter between 0 and 100 characters",
            "minLength": 0,
            "maxLength": 100
        }
    },
    "propertyOrder": [
        "image",
        "header",
        "link",
        "analytics",
        "style"
    ]
}