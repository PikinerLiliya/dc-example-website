{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/splitBlock.json",
	"title": "Split Block",
	"description": "A reusable content type which allows 2 content types to be used together to create a split block",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"content": {
			"type": "array",
			"title": "Content",
			"description": "Content to be used in the split block (left and right)",
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "",
								"enum": [
									"https://www.amplience.com/example/image.json",
									"https://www.amplience.com/example/video.json",
									"https://www.amplience.com/example/text.json",
									"https://www.amplience.com/example/banner.json"
								]
							}
						}
					}
				]
			},
			"minItems": 2,
			"maxItems": 2
		},
		"split": {
			"type": "string",
			"title": "Split Ratio",
			"description": "The percentage of display used for the left and right content (left/right)",
			"enum": [
				"50/50",
				"70/30",
				"30/70"
			]
		}
	},
	"propertyOrder": [
		"content",
		"split"
	]
}