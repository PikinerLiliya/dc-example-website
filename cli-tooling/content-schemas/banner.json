{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/banner.json",
	"title": "Banner",
	"description": "A reusable content type for banner content",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"asana": {
			"type": "object",
			"title": "Asana Information",
			"description": "Workflow information from Asana",
			"allOf": [
				{
					"$ref": "https://www.amplience.com/examples/asana.json"
				}
			]
		},
		"metadata": {
			"type": "object",
			"title": "Meta Data",
			"description": "Meta data related to this content",
			"allOf": [
				{
					"$ref": "https://www.amplience.com/examples/metadata.json"
				}
			]
		},
		"img": {
			"type": "object",
			"title": "Image",
			"description": "The background image for the banner",
			"allOf": [
				{
					"$ref": "https://www.amplience.com/examples/image.json"
				}
			]
		},
		"header": {
			"allOf": [
				{
					"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
				}
			],
			"properties": {
				"values": {
					"items": {
						"properties": {
							"value": {
								"type": "string",
								"title": "Header",
								"description": "Header text for the banner",
								"validation": "Please enter less than 255 characters",
								"minLength": 0,
								"maxLength": 255
							}
						}
					}
				}
			}
		},
		"headerFont": {
			"type": "object",
			"title": "Header Font",
			"description": "The font for the header",
			"allOf": [
				{
					"$ref": "https://www.amplience.com/examples/font-chooser.json"
				}
			]
		},
		"subheader": {
			"type": "string",
			"title": "Subheader",
			"description": "Sub header text for the banner",
			"validation": "Please enter less than 255 characters",
			"minLength": 0,
			"maxLength": 255
		},
		"description": {
			"type": "string",
			"title": "Description",
			"description": "Description text for the banner",
			"validation": "Please enter less than 2000 characters",
			"minLength": 0,
			"maxLength": 2000
		},
		"links": {
			"type": "array",
			"title": "Links",
			"description": "The action link(s) for the banner (maximum of 3)",
			"items": {
				"allOf": [
					{
						"$ref": "https://www.amplience.com/examples/link.json"
					}
				],
				"_interpolate": true
			},
			"minItems": 0,
			"maxItems": 3
		},
		"alignment": {
			"type": "string",
			"title": "Alignment",
			"description": "Alignment of the text content in the banner (left/right). Default is left",
			"enum": [
				"left",
				"right",
				"center"
			]
		},
		"percH": {
			"title": "Horizontal alignment percentage",
			"description": "A value between -100 and 100 (e.g. 30) Default is 0",
			"type": "number",
			"minimum": -100,
			"maximum": 100
		},
		"percV": {
			"title": "Vertical alignment percentage",
			"description": "A value between -100 and 100 (e.g. 30) Default is 0",
			"type": "number",
			"minimum": -100,
			"maximum": 100
		},
		"contentImg": {
			"type": "object",
			"title": "Content Image",
			"description": "The image to display with the textual content for this banner",
			"allOf": [
				{
					"$ref": "https://www.amplience.com/examples/image.json"
				}
			]
		},
		"style": {
			"type": "string",
			"title": "Style",
			"description": "Add classname for CSS styling",
			"validation": "Please enter between 0 and 100 characters",
			"minLength": 0,
			"maxLength": 100
		},
		"hideBG": {
			"type": "boolean",
			"title": "Hide Background",
			"description": "Enable to have no background behind the banner text. Default is false"
		},
		"stackMobileLayout": {
			"type": "boolean",
			"title": "Stack Mobile Layout",
			"description": "Enable to allow banner text to stack underneath the image on small screens. Default is false"
		},
		"txtCol": {
			"title": "Text Colour",
			"description": "The colour of the text",
			"format": "color",
			"type": "string"
		}
	},
	"propertyOrder": [
		"asana",
		"metadata",
		"img",
		"header",
		"headerFont",
		"subheader",
		"description",
		"links",
		"alignment",
		"percH",
		"percV",
		"txtCol",
		"contentImg",
		"style",
		"stackMobileLayout"
	]
}