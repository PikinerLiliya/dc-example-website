{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/carousel.json",
	"title": "Slider",
	"description": "Contains Images, Videos & Banners to produce a Carousel",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"slides": {
			"type": "array",
			"title": "Slides",
			"description": "Select from banners, images and videos to use in this carousel",
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "",
								"enum": [
									"https://www.amplience.com/examples/landmark-main-banner.json",
									"https://www.amplience.com/examples/banner.json",
									"https://www.amplience.com/examples/image.json",
									"https://www.amplience.com/examples/video.json"
								]
							}
						}
					}
				]
			},
			"minItems": 1,
			"maxItems": 8
		},
		"autoPlay": {
			"type": "boolean",
			"title": "Autoplay",
			"description": "Autoplay slider?"
		},
		"loop": {
			"type": "boolean",
			"title": "Loop slider",
			"description": "Infinite slide looping"
		},
		"navigationDots": {
			"type": "boolean",
			"title": "Navigation Dots",
			"description": "Display Navigation dots?"
		},
		"headline":{  
         "allOf":[  
            {  
               "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
            }
         ],
         "properties":{  
            "values":{  
               "items":{  
                  "properties":{  
                     "value":{  
                        "title":"Headline",
                        "description":"Optional Title for this carousel",
                        "type":"string",
                        "format":"text",
                        "minLength":5,
                        "maxLength":256
                     }
                  }
               }
            }
         }
      }
	},
	"propertyOrder": [
		"slides",
		"autoPlay",
		"loop",
		"navigationDots",
		"headline"
	]
}