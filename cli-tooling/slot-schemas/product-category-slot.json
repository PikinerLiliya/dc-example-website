{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/slots/product-category-slot.json",
	"title": "Product Category Slot",
	"description": "A Slot that can accept a single banner",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"content": {
			"title": "Content",
			"allOf": [
				{
					"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
				},
				{
					"properties": {
						"contentType": {
							"title": "contentType",
							"enum": [
								"https://www.amplience.com/examples/landmark-product-category-carousel.json"
							]
						}
					}
				}
			]
		}
	},
	"propertyOrder": [
		"content"
	]
}