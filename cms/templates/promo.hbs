<div class="amp-ca-promo-wrap">
    <a href="{{link.value}}" title="{{link.label}}">
        <picture class="amp-ca-promo-ico">
            <img src="//{{icon.defaultHost}}/i/{{icon.endpoint}}/{{icon.name}}?w=40&h=40" srcset="//{{icon.defaultHost}}/i/{{icon.endpoint}}/{{icon.name}}?w=40&h=40 1x, //{{icon.defaultHost}}/i/{{icon.endpoint}}/{{icon.name}}?w=80&h=80 2x" class="amp-ca-image-pic" />
        </picture>
        <div class="amp-ca-promo-text-wrap">
            <div class="amp-ca-promo-head-text">{{topLine}}</div>
            <div class="amp-ca-promo-content-text">{{bottomLine}}</div>
        </div>
    </a>
</div>