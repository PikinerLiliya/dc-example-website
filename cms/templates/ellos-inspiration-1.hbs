<div class="amp-ca-ellos-inspiration">
  {{#if category}}
      <div class="amp-ca-ellos-category">{{category}}</div>
  {{/if}}

  {{#each blocks as |item|}}
      {{> mapping item }}
  {{/each}}

  {{#if articles}}
    <div class="amp-ca-ellos-product-header">Display the following products....</div>
  {{/if}}
  {{#each articles}}
    <div class="amp-ca-ellos-product-no">
      {{this}}
    </div>
  {{/each}}
  {{#if query}}
      <div class="amp-ca-ellos-query">{{query}}</div>
  {{/if}}
</div>
