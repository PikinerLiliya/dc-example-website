<div class='amp-ca-video-wrap'>
	{{#if videoTitle}}
	    <div class="amp-ca-title">{{videoTitle}}</div>
	{{/if}}
	{{#if videoDescription}}
	    <div class="amp-ca-description">{{videoDescription}}</div>
	{{/if}}
	{{#if video}}
	    <video class="amp-ca-video" poster="//{{video.defaultHost}}/v/{{video.endpoint}}/{{video.name}}" controls src="//{{video.defaultHost}}/v/{{video.endpoint}}/{{video.name}}/mp4_720p">
	        <source src="//{{video.defaultHost}}/v/{{video.endpoint}}/{{video.name}}/mp4_720p" data-res="High" data-bitrate="2119" label="High" type="video/mpeg4" codecs="h264">
	        <source src="//{{video.defaultHost}}/v/{{video.endpoint}}/{{video.name}}/mp4_480p" data-res="Medium" data-bitrate="689" label="Medium" type="video/mpeg4" codecs="h264">
	        <source src="//{{video.defaultHost}}/v/{{video.endpoint}}/{{video.name}}/webm_480p" data-res="Medium" data-bitrate="624" label="Medium" type="video/webm" codecs="vp8">
	    </video>
	    <div class="pause-button inactive"></div>
    {{/if}}
</div>

