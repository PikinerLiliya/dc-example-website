<div class="amp-ca-banner js_ca_banner">
    {{#with img}}
        <div class="amp-ca-banner-pic-wrap">
            {{> image this }}
        </div>
    {{/with}}
    <div class="amp-ca-banner-info-wrap
    {{#if stackMobileLayout}}amp-ca-info-bottom{{else}}amp-ca-info-normal{{/if}}
        {{#unless header}}
            {{#unless subheader}}
                {{#unless description}}
                    {{#unless button.label}}
                        amp-ca-hide
                     {{/unless}}
                {{/unless}}
            {{/unless}}
        {{/unless}}"
         data-align="{{#if alignment}}{{alignment}}{{else}}left{{/if}}"

         {{#compare alignment '==' 'left'}}
            style="left:{{percH}}%;top:{{percV}}%";
         {{/compare}}
         {{#compare alignment '==' 'right'}}
            style="right:{{percH}}%;top:{{percV}}%";
         {{/compare}}
         {{#compare alignment '==' 'center'}}
            style="left:{{percH}}%;top:{{percV}}%";
         {{/compare}}
         >

        <div class="amp-ca-banner-info {{#if style}}{{style}}{{else}}black{{/if}} {{#if hideBG}}hideBG{{/if}}">
            {{#with contentImg}}
                <div class="amp-ca-banner-pic-wrap">
                    {{> image this }}
                </div>
            {{/with}}

            {{#if header}}
                <div class="amp-ca-banner-header" {{#if txtCol}}style="color:{{txtCol}}"{{/if}}>{{header}}</div>
            {{/if}}
            {{#if subheader}}
                <div class="amp-ca-banner-subheader" {{#if txtCol}}style="color:{{txtCol}}"{{/if}}>{{subheader}}</div>
            {{/if}}
            {{#if description}}
                <div class="amp-ca-banner-description" {{#if txtCol}}style="color:{{txtCol}}"{{/if}}>{{description}}</div>
            {{/if}}
            {{#each links}}
                {{#if label}}
                    <a href="{{url}}"
                       class="amp-ca-banner-button readMore {{#if ../style}}{{../style}}{{else}}black{{/if}}">{{label}}</a>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>
